<?xml version="1.0"?>
<Container version="2">
  <Name>backtail</Name>
  <Repository>ghcr.io/wazzanoski/backtail:latest</Repository>
  <Registry>https://github.com/wazzanoski/backtail/pkgs/container/backtail</Registry>
  <Network>bridge</Network>
  <Shell>sh</Shell>
  <Privileged>false</Privileged>
  <Support>https://forums.unraid.net/topic/186161-support-wazzanoski-backtail/</Support>
  <Project>https://man.openbsd.org/sftp.1</Project>
  <Overview>A secure, minimal and lightweight container providing a backup destination (via SFTP) through Tailscale.</Overview>
  <Category>Backup: Network:FTP Network:VPN</Category>
  <TemplateURL>https://github.com/wazzanoski/unraid-container-templates/blob/main/backtail.xml</TemplateURL>
  <Icon>https://raw.githubusercontent.com/wazzanoski/backtail/refs/heads/main/backtail.png</Icon>
  <DonateText>If you appreciate my work, then please consider buying me a beer :D</DonateText>
  <DonateLink>https://www.paypal.com/donate/?business=7LTHAMWJ9Q7KW&amp;no_recurring=0&amp;item_name=Cure+my+thirst%21&amp;currency_code=AUD</DonateLink>
  <DonateImg>https://www.paypal.com/en_US/i/btn/btn_donate_SM.gif</DonateImg>
  <Config Name="Backups" Target="/home/backtail" Default="/mnt/disks/BACKTAILUSB" Mode="rw,slave" Description="Destination Path for Backups." Type="Path" Display="always" Required="true" Mask="false"/>
  <Config Name="Config" Target="/config" Default="/mnt/user/appdata/backtail" Mode="rw" Description="Persistent Path for Config.&#13;&#10;Contains:&#13;&#10;- Banner file&#13;&#10;- SSH Host key&#13;&#10;- Tailscale State Directory" Type="Path" Display="always" Required="true" Mask="false"/>
</Container>
